<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000"
		x:Name="M_Window" Background="Black" FontSize="36" BorderThickness="5,5,5,5">
	<Canvas x:Name="canvas">
		<Button x:Name="buttonDraw" Width="100" Height="50"
				Canvas.Left="30" Canvas.Top="900" Background="LightGray"
				Click="Button_Click" Content="Draw" FontFamily="Times New Roman" FontStyle="Normal" FontWeight="Bold" BorderThickness="1,1,0,1"/>
	</Canvas>
</Window>
